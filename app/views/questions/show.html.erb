<h2 class="text-center">Question</h2>

<p><%= @question.content %></p>

<%= link_to 'New answer', new_test_question_answer_path(@test, @question), class: 'btn btn-default' %>

<table class="table table-striped">
  <tr>
    <th>#</th>
    <th>Answer</th>
    <th>Is correct</th>
    <th>Actions</th>
  </tr>

  <% @question.answers.each do |answer| %>
    <tr>
      <td><%= answer.id %></td>
      <td><%= answer.content %></td>
      <td><%= answer.correct %></td>
      <td>
        <%= link_to 'Edit', edit_test_question_answer_path(@test, @question, answer) %>
        <%= link_to 'Delete', test_question_answer_path(@test, @question, answer),
                    method: :delete,
                    data: { confirm: 'Are you sure?'} %>
      </td>
    </tr>
  <% end %>
</table>